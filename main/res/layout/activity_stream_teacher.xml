<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".StreamTeacherActivity">

    <TextView
        android:id="@+id/textViewStreamTitleTeacher"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Course Stream"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextSendPostTeacher"
            android:layout_width="342dp"
            android:layout_height="match_parent"
            android:hint="Enter Text" />

        <Button
            android:id="@+id/buttonSendPostTeacher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SENT POST" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewPostListTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>