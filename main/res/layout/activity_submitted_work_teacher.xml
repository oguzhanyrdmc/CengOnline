<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmittedWorkTeacherActivity">

    <TextView
        android:id="@+id/textViewAssignmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textViewAssignmentInfo"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_below="@id/textViewAssignmentName"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <ListView
        android:id="@+id/listViewAssignmentSubmitted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAssignmentInfo"/>

</RelativeLayout>