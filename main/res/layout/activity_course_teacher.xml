<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CourseTeacherActivity">


<EditText
    android:id="@+id/editTextcourseName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter name" />

    <EditText
        android:id="@+id/editTextcourseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextcourseName"
        android:hint="Enter code" />

    <EditText
        android:id="@+id/editTextcourseCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextcourseCode"
        android:hint="Enter Capacity" />


<Button
    android:id="@+id/buttonAddCourse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editTextcourseCapacity"
    android:text="Add" />

<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/buttonAddCourse"
    android:text="Courses"
    android:textAlignment="center"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    android:gravity="center_horizontal" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textView"
    android:text="Course List"
    android:textAlignment="center"
    android:gravity="center_horizontal" />

<ListView
    android:id="@+id/listViewCourse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView1">

</ListView>

</RelativeLayout>